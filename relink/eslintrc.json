{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "plugins": ["prettier"],
    "extends": [
        "eslint:recommended",
        "prettier" //disables rules that conflict with Prettier. Must be last in the extends array
    ],

    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prettier/prettier": "error" // adds a rule that formats content using Prettier
    }
}
